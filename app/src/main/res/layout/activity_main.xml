<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_bg"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corners_22c1fd"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="拨打电话APP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17dp" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_msg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="循环拨打"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="1dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/bg_corners_green"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/radio_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="定时拨打"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="1dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/bg_corners_green"
            android:textColor="@color/white"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/line_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/radiogroup"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_corners_22c1fd"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_corners_red"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="开始"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_corners_black"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="停止"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/line_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_btn"
        android:background="@drawable/bg_uav_et_shape"
        android:layout_margin="10dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_corners_22c1fd"
                android:gravity="center"
                android:padding="2dp"
                android:text="号码:"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:background="@drawable/bg_uav_et_shape"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="18dp" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/line_loop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_corners_22c1fd"
                android:gravity="center"
                android:padding="2dp"
                android:text="循环"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/edit_loop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:background="@drawable/bg_uav_et_shape"
                android:hint="请输入循环间隔时间"
                android:inputType="number"
                android:maxLength="11"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/bg_corners_22c1fd"
                android:gravity="center"
                android:padding="2dp"
                android:text="单位:分钟"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@drawable/bg_corners_green"
                android:gravity="center"
                android:padding="2dp"
                android:text="设置定时时间"

                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/edit_timer"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/bg_uav_et_shape"
                android:hint="00:00"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_corners_green"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="保存"

                android:textSize="18dp" />


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_corners_green"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>